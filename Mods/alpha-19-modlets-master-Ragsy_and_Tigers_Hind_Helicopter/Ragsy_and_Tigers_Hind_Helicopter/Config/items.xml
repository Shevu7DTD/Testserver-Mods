<configs>

<append xpath="/items">
<item name="vehicleHindPlaceable">
<property name="Extends" value="vehicleMinibikePlaceable"/>
<property name="EconomicValue" value="30000"/>
<property name="CustomIcon" value="Hind"/>
<property name="DescriptionKey" value="vehicleHindplaceableDesc"/>
