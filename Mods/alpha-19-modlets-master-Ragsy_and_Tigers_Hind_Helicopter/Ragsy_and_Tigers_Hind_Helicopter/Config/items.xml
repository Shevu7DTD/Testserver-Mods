	<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="vehicleHind" operation="set" value="1"/>
	<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
</effect_group>
</item>
<item name="vehicleHindchassis">
<property name="Extends" value="vehicleWheels"/>
